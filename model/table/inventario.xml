<tabla>
    <columna>
        <nombre>cantidad_ingreso</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>cantidad_saldo</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>cantidad_salida</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>codalmacen</nombre>
        <tipo>character varying(4)</tipo>
        <nulo>NO</nulo>
    </columna>
    <columna>
        <nombre>descripcion</nombre>
        <tipo>text</tipo>
        <nulo>YES</nulo>
    </columna>
    <columna>
        <nombre>fecha</nombre>
        <tipo>date</tipo>
        <nulo>NO</nulo>
    </columna>
    <columna>
        <nombre>monto_ingreso</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>monto_saldo</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>monto_salida</nombre>
        <tipo>double precision</tipo>
        <nulo>NO</nulo>
        <defecto>0</defecto>
    </columna>
    <columna>
        <nombre>referencia</nombre>
        <tipo>character varying(18)</tipo>
        <nulo>NO</nulo>
    </columna>
    <restriccion>
        <nombre>ca_inventario_articulos</nombre>
        <consulta>FOREIGN KEY (referencia) REFERENCES articulos(referencia)</consulta>
    </restriccion>
    <restriccion>
        <nombre>inventario_pkey</nombre>
        <consulta>PRIMARY KEY (codalmacen, fecha, referencia)</consulta>
    </restriccion>
</tabla>
